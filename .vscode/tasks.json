{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "compose: build & up",
      "type": "shell",
      "command": "docker compose build; docker compose up",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "compose: down",
      "type": "shell",
      "command": "docker compose down",
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "close": true
      },
      "problemMatcher": []
    },
    {
      "label": "storage: up",
      "type": "shell",
      "command": "docker compose -f 'docker-compose.yml' up -d --build 'db'",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "run: sso-service",
      "type": "shell",
      "command": "go run .",
      "options": {
        "cwd": "${workspaceFolder}/sso-service",
        "env": {
          "CONFIG_PATH": "${workspaceFolder}/sso-service/config/local.yml"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "generate: protobuf",
      "type": "shell",
      "command": "protoc -I proto ./proto/auth/auth.proto --go_out=./gen/go --go_opt=paths=source_relative --go-grpc_out=./gen/go --go-grpc_opt=paths=source_relative",
      "options": {
        "cwd": "${workspaceFolder}/sso-service/protos"
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    }
  ]
}